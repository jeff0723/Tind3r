{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Tind3rUserProfile",
    "required": [],
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string",
            "description": "User name of Tind3r",
            "default": ""
        },
        "birthday": {
            "type": "string",
            "description": "User's birthday ",
            "default": ""
        },
        "bio": {
            "type": "string",
            "description": "Bio",
            "default": ""
        },
        "gender": {
            "type": "number",
            "description": "gender -> 0 - women, 1 - men, 2 - non-binary",
            "default": 0
        },
        "sexualOrientation": {
            "type": "number",
            "description": "sex orientation  -> 0 - women, 1 - men, 2 - non-binary",
            "default": 0
        },
        "showMe": {
            "type": "number",
            "description": "show me which gender  -> 0 - women, 1 - men, 2 - non-binary",
            "default": 0
        },
        "ageFilterMax": {
            "type": "number",
            "description": "the highest age can accept",
            "default": 100
        },
        "ageFilterMin": {
            "type": "number",
            "description": "the lowest age can accept",
            "default": 0
        },
        "showMyGenderOnProfile": {
            "type": "boolean",
            "description": "whether to show my gender on my profile",
            "default": false
        },
        "importNFT": {
            "type": "boolean",
            "description": "whether to import nft",
            "default": false
        },
        "addOnChainActivity": {
            "type": "boolean",
            "description": "whether to import onChain activity",
            "default": false
        },
        "organizations": {
            "type": "array",
            "description": "Organizations of user",
            "items": {
                "type": "string"
            },
            "minItems": 0,
            "uniqueItems": true,
            "default": []
        },
        "tags": {
            "type": "array",
            "description": "tags of user",
            "items": {
                "type": "string"
            },
            "minItems": 0,
            "uniqueItems": true,
            "default": []
        },
        "profileBaseUri": {
            "type": "string",
            "description": "profile picture base uri",
            "default": ""
        },
        "profilePicture": {
            "type": "string",
            "description": "profile picture",
            "default": ""
        },
        "profilePictureCounts": {
            "type": "number",
            "description": "profile picture count",
            "default": 0
        },
        "selectedProfileIndex": {
            "type": "number",
            "description": "selected profile picture index",
            "default": 0
        },
        "discoverable": {
            "type": "boolean",
            "description": "is user discoverable",
            "default": "1"
        },
        "createDate": {
            "type": "string",
            "description": "createDate",
            "default": ""
        },
        "distanceFilter": {
            "type": "number",
            "description": "distance filter",
            "default": 10000
        },
        "school": {
            "type": "string",
            "description": "school",
            "default": ""
        },
        "hobbies": {
            "type": "array",
            "description": "hobbies",
            "items": {
                "type": "string"
            },
            "minItems": 0,
            "uniqueItems": true,
            "default": []
        },
        "selfieVerification": {
            "type": "boolean",
            "description": "selfie verification",
            "default": 0
        }
    }
}