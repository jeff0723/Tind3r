{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Tind3rUserProfile",
    "required": [
        "name",
        "birthday",
        "gender"
    ],
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string",
            "description": "User name of Tind3r",
            "default": ""
        },
        "birthday": {
            "type": "string",
            "description": "User's birthday ",
            "default": ""
        },
        "bio": {
            "type": "string",
            "description": "Bio",
            "default": ""
        },
        "gender": {
            "type": "number",
            "description": "gender -> 0 - women, 1 - men, 2 - non-binary",
            "default": 0
        },
        "sexOrientation": {
            "type": "number",
            "description": "sex orientation  -> 0 - women, 1 - men, 2 - non-binary",
            "default": 0
        },
        "showMe": {
            "type": "number",
            "description": "show me which gender  -> 0 - women, 1 - men, 2 - non-binary",
            "default": 0
        },
        "showMyGenderOnProfile": {
            "type": "boolean",
            "description": "whether to show my gender on my profile",
            "default": false
        },
        "importNFT": {
            "type": "boolean",
            "description": "whether to import nft",
            "default": false
        },
        "addOnChainActivity": {
            "type": "boolean",
            "description": "whether to import onChain activity",
            "default": false
        },
        "organizations": {
            "type": "array",
            "description": "Organizations of user",
            "items": {
                "type": "string"
            },
            "minItems": 0,
            "uniqueItems": true,
            "default": []
        },
        "tags": {
            "type": "array",
            "description": "tags of user",
            "items": {
                "type": "string"
            },
            "minItems": 0,
            "uniqueItems": true,
            "default": []
        },
        "profileBaseUri": {
            "type": "string",
            "description": "profiel picture base uri",
            "default": ""
        },
        "profilePictureCounts": {
            "type": "number",
            "description": "profile picture count",
            "default": 0
        },
        "selectedProfileIndex": {
            "type": "number",
            "description": "selected profile picture index",
            "default": 0
        }
    }
}